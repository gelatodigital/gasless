{
  "name": "@gelatocloud/gasless",
  "private": true,
  "author": "Gelato",
  "license": "MIT",
  "description": "Gelato Gasless SDK: All-in-one solution for gasless transactions",
  "homepage": "https://github.com/gelatodigital/gasless",
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "types:check": "tsc --noEmit",
    "biome:changed": "biome check --changed",
    "biome:staged": "biome check --staged --write",
    "biome:check": "biome check --write",
    "biome:format": "biome format --write",
    "prepare": "lefthook install",
    "changeset:publish": "pnpm build && changeset publish",
    "changeset:version": "changeset version && pnpm biome:format",
    "clean": "pnpm -r clean"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@changesets/cli": "2.29.7",
    "@types/node": "latest",
    "lefthook": "2.0.2",
    "typescript": "catalog:"
  },
  "engines": {
    "node": ">=23"
  },
  "packageManager": "pnpm@10.15.0",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "@gelatocloud/gasless": "*"
      }
    },
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "lefthook"
    ]
  },
  "overrides": {
    "@gelatocloud/gasless": "workspace:*"
  },
  "workspaces": {
    "packages": [
      "examples/**",
      "src"
    ],
    "catalog": {
      "permissionless": "0.3.2",
      "typescript": "5.9.3",
      "viem": "^2.0.0",
      "zod": "4.1.13"
    }
  }
}
